block index
  link(rel='stylesheet' type='text/css' href='css/indexStyle.css')    
  script(src='/socket.io/socket.io.js')
  script(src='js/index.js')

  ul.pages
    li.chat.page
      header
        div
          h2(id="roomNumber") 방번호
        div
          h4(id="onlineUserNum") 
        div
          h4 설정

